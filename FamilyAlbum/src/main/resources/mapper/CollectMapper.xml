<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.album.mapper.CollectMapper">

    <insert id="insert" parameterType="collect" useGeneratedKeys="true" keyProperty="id">
        insert into `collect`
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="id != null">id,</if>
            <if test="userId != null">user_id,</if>
            <if test="categoryId != null">category_id,</if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="id != null">#{id},</if>
            <if test="userId !=null">#{userId},</if>
            <if test="categoryId !=null">#{categoryId},</if>
        </trim>
    </insert>
    
    <update id="update">
        update collect
        <trim prefix="set" suffixOverrides=",">
            <if test="userId != null">user_id = #{userId},</if>
            <if test="categoryId != null">category_id = #{CategoryId},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteBatch">
        delete from collect
        where id in
        <foreach collection="ids" item="id" open="(" close=")" separator=",">
            #{id}
        </foreach>
    </delete>

    <select id="selectAll" resultType="com.album.entity.Collect">
        select c.*, user.name as userName, category.name as categoryName
        from collect as c
        left join user on c.user_id = user.id
        left join category on c.category_id = category.id
        <where>
            <if test="id != null">and c.id =#{id}</if>
            <if test="userId != null">and c.user_id =#{userId}</if>
            <if test="userName != null">and user.name like concat('%',#{userName},'%')</if>
            <if test="categoryId != null">and c.category_id =#{categoryId}</if>
            <if test="categoryName !=null">and category.name like concat('%',#{categoryName},'%')</if>
        </where>
        order by id desc
    </select>
</mapper>